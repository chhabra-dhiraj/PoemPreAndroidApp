<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="io.github.chhabra_dhiraj.poempre.viewmodels.AuthenticationViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.main.authentication.PasswordInputScreenFragment">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_first_name_user_details_input_screen_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_et_first_name_user_details_input_screen_fragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiet_first_name_user_details_input_screen_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_last_name_user_details_input_screen_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/hint_et_last_name_user_details_input_screen_fragment"
                app:layout_constraintEnd_toEndOf="@+id/til_first_name_user_details_input_screen_fragment"
                app:layout_constraintStart_toStartOf="@+id/til_first_name_user_details_input_screen_fragment"
                app:layout_constraintTop_toBottomOf="@+id/til_first_name_user_details_input_screen_fragment">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiet_last_name_user_details_input_screen_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password_user_details_input_screen_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/hint_et_password_user_details_input_screen_fragment"
                app:layout_constraintEnd_toEndOf="@+id/til_last_name_user_details_input_screen_fragment"
                app:layout_constraintStart_toStartOf="@+id/til_last_name_user_details_input_screen_fragment"
                app:layout_constraintTop_toBottomOf="@+id/til_last_name_user_details_input_screen_fragment"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiet_password_user_details_input_screen_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_confirm_password_user_details_input_screen_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_et_confirm_password_user_details_input_screen_fragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/til_password_user_details_input_screen_fragment"
                app:layout_constraintStart_toStartOf="@+id/til_password_user_details_input_screen_fragment"
                app:layout_constraintTop_toBottomOf="@+id/til_password_user_details_input_screen_fragment"
                app:layout_constraintVertical_bias="0.0"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiet_confirm_password_user_details_input_screen_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_user_details_input_screen_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/text_btn_submit_user_details_input_screen_fragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/til_confirm_password_user_details_input_screen_fragment"
                app:layout_constraintStart_toStartOf="@+id/til_confirm_password_user_details_input_screen_fragment"
                app:layout_constraintTop_toBottomOf="@+id/til_confirm_password_user_details_input_screen_fragment"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>